{% extends "base.jinja" %}

{% block content %}
    <h2>{{ user.username }}</h2>
    {% for cards in collect %}
        
        <a href="{{ url_for('collect.show_card', pokemon=cards.pokemon, username=current_user.username ) }}">{{ cards.pokemon }}</a> <br>
        
    {% endfor %}
    
    {% if data  %}
    
        <div class="card ml-50" style="width: 18rem;">
            <img src="{{ data['sprites']['front_default'] }}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{ data['name'] }}</h5>
                    <p class="card-text">Type: {{ types[0] }} {% if data['types'][1] %}, {{  data['types'][1]['type']['name'] }} {% else %}  {% endif %} <br>
                                        Abilities: {{ abilities[0] }} {{ abilities[1] }} <br>
                                        Stats: <br>
                                        {{ stats[0] }}: {{ base_stat[0] }} <br>
                                        {{ stats[1] }}: {{ base_stat[1] }} <br>
                                        {{ stats[2] }}: {{ base_stat[2] }} <br>
                                        {{ stats[3] }}: {{ base_stat[3] }} <br>
                                        {{ stats[4] }}: {{ base_stat[4] }} <br>
                                        {{ stats[5] }}: {{ base_stat[5] }}</p>
                                      
                </div>
            </div>
        
    {% endif %}
    
    
{% endblock %}